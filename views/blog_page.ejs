<html lang="en">
<head>
  <title>My Blogger</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="../bootstrap.min.css"></link>
	<link href="../font.css" rel="stylesheet"></link>
  <link href="../blogs.css" rel="stylesheet"></link>
 
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" style="float:right">
	  <div class="container">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="/">Blogger</a>
	    </div>
	    <ul class="nav navbar-nav">
	      <li class="active"><a href="/">Home</a></li>
				<li class=""><a href="/profile">Profile Page</a></li>
	      <li class=""><a href="/logout">Logout</a></li>
	    </ul>
	  </div>
	</nav>
	<!-- End-->
	<div class="container" style="margin-top: 60px">

		<div class="row">

			<!-- Post Content Column -->
			<div class="col-md-8 col-md-offset-2">

				<!-- Title -->
				<center>
					<h1><%= details[0].title %></h1>

					<!-- Author -->
					<p class="username">
						by <a><%= details[0].username %></a>
					</p>

					<hr>

				</center>
				<hr>

				<!-- Preview Image -->
				<img class="postimage" src="../api.png" alt="API111">

				<hr>

				<!-- Post Content -->
				<div class="postcontent">

					<p><%= details[0].description %></p>

				</div>
				<hr>

				<center>
				<div style="margin:10px">
			        <div class="btn btn-info btn-lg" onclick="like()">
			          <span class="glyphicon glyphicon-thumbs-up"></span> Like
							</div>
			        <div class="btn btn-success btn-lg" onclick="dislike()" style="margin-left:30px">
			          <span class="glyphicon glyphicon-thumbs-down"></span> DisLike
							</div>
			    </div>
				</center>

			</div>

		</div>
		<!-- /.row -->

	</div>
	<script src="../jquery.min.js"></script>
	<script src="../bootstrap.min.js"></script>
	<script> 
	var id = <%= id %>;
	function like(){
		$.post('/like',{id:id},function(data){
			if(data=="success"){
				alert('Liked');
			}
			else{
				alert('Error');
			}
		});
	}

	function dislike(){
		$.post('/dislike',{id:id},function(data){
			if(data=="success"){
				alert('disliked');
			}
			else{
				alert('Error');
			}
		});
	}
	</script>
</body>
</html>